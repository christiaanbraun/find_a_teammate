<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head.ejs') %>
  <body>
    <%- include ('../partials/navbar.ejs') %>

    <main>
      <section class="loadout">
        <% if (user.length > 0) { %> <% user.forEach(user => { %>
        <div class="primary">
          <h2><%= user.primary %></h2>
          <!-- <img src="/images/m4.jpg" /> -->
        </div>
        <div class="secondary">
          <h2><%= user.secondary %></h2>
          <img />
        </div>
        <div class="operator">
          <h2><%= user.operator %></h2>
          <img />
        </div>
        <div class="perk1">
          <h2><%= user.perk1 %></h2>
          <img />
        </div>
        <div class="perk2">
          <h2><%= user.perk2 %></h2>
          <img />
        </div>
        <div class="perk3">
          <h2><%= user.perk3 %></h2>
          <img />
        </div>
      </section>

      <section class="profiles">
        <h2>Username: <%= user.username %></h2>
        <h3>Platform: <%= user.platform %></h3>
        <h3>Age: <%= user.age %></h3>
      </section>

      <% }) %> <% } else { %>
      <p>Error, fix it n00b</p>
      <% } %>
    </main>
  </body>
</html>
